<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".init.LoginPassengerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    RIDER LOGIN"
        android:textSize="50dp"
        android:textColor="#000"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/loginpassenger_email"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:hint="Email Address"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/loginpassenger_password"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/loginpassenger_loginbutton"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="LOGIN"
        android:textColor="#fff"
        android:background="#FFB300"/>
    <TextView
        android:id="@+id/loginpassenger_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="                                                                     Forgot Password ?"
        android:textColor="#110101"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginpassenger_signup"
        android:textAllCaps="false"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="Don't have an account ?   Sign Up"
        android:textColor="#140101"/>
</LinearLayout>